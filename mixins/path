# Development directory
export DEVELOPMENT_DIR=$HOME/Development

# Misc
PATH=$HOME/lib/apache-ant-1.9.3/bin:$ANDROID_HOME/sdk/platform-tools:$ANDROID_HOME/sdk/tools:$HOME/lib/adt-bundle-mac-x86_64-20131030/sdk/platform-tools:/Applications/CoronaSDK:/usr/local/bin:$PATH:/usr/local/sbin:/usr/sbin:/sbin:/usr/local/bin:/usr/X11/bin:$PATH

# Binaries for development
PATH=$HOME/bin:$PATH

# Brew
PATH=/usr/local/bin:/usr/local/sbin:$PATH

# Elixir
PATH=$HOME/lib/elixir/current/bin:$PATH
PATH=$HOME/lib/elixir/bin:$PATH

# Erlang
PATH=$HOME/erlang_17/bin:$PATH
PATH=$HOME/erlang/bin:$PATH
# Kerl installed version - get the last version installed and activate it
# This is just a hack. I need to figure out a better way of managing erlang versions.
ERLANG_VERSION=$(kerl list installations | tail -1 | awk '{print $2}')
. $ERLANG_VERSION/activate
# Additional OTP applications
export ERL_LIBS=$DEVELOPMENT_DIR

# PostgreSQL
PATH=/Applications/Postgres.app/Contents/Versions/9.3/bin:$PATH

# Java
JAVA_HOME_BIN=/usr/libexec/java_home
if [ -f $JAVA_HOME_BIN ]; then
    export JAVA_HOME=`$JAVA_HOME_BIN -v '1.8*'`
    PATH=$JAVA_HOME/bin:$PATH
fi

# rbenv
# I am leaving this here as it does have an effect on my $PATH
# I might want to move this to a better location later
export RBENV_ROOT=$HOME/.rbenv
PATH=$RBENV_ROOT/bin:$PATH
eval "$(rbenv init - zsh)"

# Neo4j
PATH=$HOME/lib/neo4j-community-2.0.0-RC1/bin/neo4j:$PATH

# Go
export GOPATH=$DEVELOPMENT_DIR
PATH=$GOPATH/bin:$PATH

# NodeJS
export NVM_DIR=$HOME/.nvm
PATH=/usr/local/share/npm/bin:$PATH

# Finally export completed PATH
export PATH
