# Brew and Misc
PATH=$HOME/lib/apache-ant-1.9.3/bin:$ANDROID_HOME/sdk/platform-tools:$ANDROID_HOME/sdk/tools:$HOME/lib/adt-bundle-mac-x86_64-20131030/sdk/platform-tools:/Applications/CoronaSDK:/usr/local/bin:/usr/local/sbin:/usr/sbin:/sbin:/usr/local/bin:/usr/X11/bin:$PATH

# Development directory
export DEVELOPMENT_DIR=$HOME/devel

# Binaries for development
PATH=$HOME/bin:$PATH

# Erlang - Additional OTP applications
export ERL_LIBS=$DEVELOPMENT_DIR

# PostgreSQL
PATH=/Applications/Postgres.app/Contents/Versions/9.3/bin:$PATH

# Java
JAVA_HOME_BIN=/usr/libexec/java_home
if [ -f $JAVA_HOME_BIN ]; then
    export JAVA_HOME=`$JAVA_HOME_BIN -v '1.8*'`
    PATH=$JAVA_HOME/bin:$PATH
fi

# Neo4j
PATH=$HOME/lib/neo4j-community-2.0.0-RC1/bin/neo4j:$PATH

# Go
export GOPATH=$DEVELOPMENT_DIR
PATH=$GOPATH/bin:$PATH

# NodeJS
export NVM_DIR=$HOME/.nvm
PATH=/usr/local/share/npm/bin:$PATH

# Add tools
PATH=$HOME/dotfiles/scripts/git:$PATH

# Finally export completed PATH
export PATH
